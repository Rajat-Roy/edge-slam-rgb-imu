<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Status Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@android:color/black"
        android:padding="12dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to record"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/frameCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frames: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/imuCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMU samples: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/gpsStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS: Checking..."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/gpsCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS samples: 0"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/recordButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Recording"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Recording"
            android:enabled="false"
            android:textSize="18sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>